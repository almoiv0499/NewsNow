<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_status_bar_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_status_bar_dark</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/text_color_dark</item>
    </style>

    <style name="BackgroundFragment">
        <item name="android:background">@color/background_details_dark</item>
    </style>

    <style name="ToolbarDetailsFragment">
        <item name="android:background">@color/background_toolbar_dark</item>
        <item name="textAllCaps">false</item>
        <item name="titleCentered">true</item>
        <item name="navigationIconTint">@color/text_color_dark</item>
        <item name="titleTextColor">@color/text_color_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/candal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="menu">@menu/menu_news_detail</item>
    </style>

    <style name="ToolbarNews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/background_toolbar_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/candal</item>
        <item name="titleTextColor">@color/text_color_dark</item>
        <item name="menu">@menu/menu_top_news</item>
    </style>

    <style name="ToolbarSearchNews">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/background_toolbar_dark</item>
        <item name="navigationIconTint">@color/text_color_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/candal</item>
        <item name="titleTextColor">@color/text_color_dark</item>
        <item name="titleCentered">true</item>
        <item name="navigationIcon">@drawable/ic_backspace</item>
        <item name="menu">@menu/menu_news_section</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:background">@drawable/rounded_search_view_dark</item>
        <item name="android:inputType">text</item>
        <item name="textInputStyle">@color/text_color_dark</item>
    </style>

    <style name="BackgroundCardDetailsFragment">
        <item name="android:backgroundTint">@color/background_card_details_dark</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="TextViewStyleSection">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:background">@drawable/rounded_corner_dark</item>
    </style>

    <style name="TextViewStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="ButtonDetailsFragment">
        <item name="android:backgroundTint">@color/background_button_dark</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/candal</item>
        <item name="cornerRadius">10dp</item>
    </style>

</resources>